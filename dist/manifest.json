{
    "manifest_version": 3,
    "name": "Bromo - ChatGPT Assistant for everyone",
    "description": "Your Personal ChatGPT/OpenGPT based AI Assistant - Start adopting ai in your daily life everywhere in your favourite browser",
    "version": "0.0.1",
    "action": {
        "default_icon": {
            "16": "favicon-16x16.png",
            "48": "android-icon-48x48.png",
            "128": "apple-icon-120x120.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/backgroundPage.js"
    },
    "icons": {
        "16": "favicon-16x16.png",
        "48": "android-icon-48x48.png",
        "128": "apple-icon-120x120.png"
    },
    "host_permissions": ["https://*/*", "http://*/*"],
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "scripting",
        "storage",
        "clipboardRead"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+B"
            }
        }
    }
}
